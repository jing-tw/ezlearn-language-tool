<!-- =====================  一般設定 ========================== -->
<!-- 檔案名稱 label -->                            
<FilenameLabel x="58" y="24" right="133" R="255" G="255" B="255"/>

<!-- 秒數 label -->                             
<TimeLabel x="58" y="50" R="255" G="255" B="255"/>

<!-- 狀態顯示 label -->                             
<StatusLabel x="31" y="76" right="133" R="255" G="255" B="255"/>

<!-- ScrollBar 153,216-->                             
<Scroll_Bar left="33" top="100" right="137" bottom="107" />

<!-- 輸入元件 -->                             
<Input x="42" y="171" width="78" />

<!-- =====================  按鈕設定 ========================== 
