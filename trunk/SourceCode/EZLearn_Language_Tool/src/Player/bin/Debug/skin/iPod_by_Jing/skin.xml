<Pause x="34" y="143" Normal_Shape="PauseN.bmp" Under_Shape="PauseU.bmp" />
<IndexList x="117" y="143" Normal_Shape="IndexListN.bmp" Under_Shape="IndexListU.bmp" />
<Close x="106" y="4" Normal_Shape="CloseN.bmp" Under_Shape="CloseU.bmp" />
